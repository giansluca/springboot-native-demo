FROM gianlucamori/graalvm-compiler:java21 as builder

WORKDIR /build/app
ADD . /build/app
RUN mvn clean package -P native -DskipTests

FROM gcr.io/distroless/base-debian12
COPY --from=builder /build/app/target/springboot-native.out /

